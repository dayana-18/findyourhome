{% extends 'base.html.twig' %}

{% block title %}Demande{% endblock %}

{% block body %}
    <h1>Demande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>NumDem</th>
                <td>{{ demande.numDem }}</td>
            </tr>
            <tr>
                <th>TypeDem</th>
                <td>{{ demande.typeDem }}</td>
            </tr>
            <tr>
                <th>VilleDem</th>
                <td>{{ demande.villeDem }}</td>
            </tr>
            <tr>
                <th>DateLimite</th>
                <td>{{ demande.dateLimite ? demande.dateLimite|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Arrondissement(s) demand√©(s)</th>
                <td>{% for arrondissement in demande.arrondisseDem %}
                    {{ arrondissement.arrondisseDem }}
                    {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn"><a href="{{ path('demande_edit', {'numDem': demande.numDem}) }}">Modifier</a></button>

    {{ include('demande/_delete_form.html.twig') }}
{% endblock %}
