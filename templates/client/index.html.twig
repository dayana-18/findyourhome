{% extends 'base.html.twig' %}

{% block title %}clients{% endblock %}

{% block body %}
        <h1>Liste de clients</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Mail</th>
                <th>Adresse</th>
                <th>CodePostal</th>
                <th>Ville</th>
                <th>Tel</th>
                <th>Username</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id.nom }}</td>
                <td>{{ client.id.prenom }}</td>
                <td>{{ client.id.mail }}</td>
                <td>{{ client.id.adresse }}</td>
                <td>{{ client.id.codePostal }}</td>
                <td>{{ client.id.ville }}</td>
                <td>{{ client.id.tel }}</td>
                <td>{{ client.id.username }}</td>
                </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
